{
  "builders": [
    {
      "type": "docker",
      "image": "ubuntu",
      "export_path": "elasticsearch.tar"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": ["sudo apt-get update",
                "sudo apt-get -y install curl"
      ]
    },
    {
      "type": "chef-solo",
      "cookbook_paths": ["cookbooks"],
      "json": {
        "name": "elasticsearch",
        "run_list": [
          "recipe[java]",
          "recipe[elasticsearch]"
        ],
        "java": {
          "install_flavor": "openjdk",
          "jdk_version": "7"
        },
        "elasticsearch": {
          "cluster" : { "name" : "elasticsearch" }
        }
      }
    }
  ]
}
