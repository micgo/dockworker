{
  "builders": [
    {
      "type": "docker",
      "image": "ubuntu",
      "export_path": "ubuntu_base.tar"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": ["sudo apt-get update",
                "sudo apt-get -y install curl",
                "sudo apt-get install git-core",
                "cd /var/chef/cache",
                "sudo /opt/chef/embedded/bin/gem install berkshelf --no-ri --no-rdoc",
                "git clone https://github.com/micgo/dockworker.git /var/chef/cache/cookbooks/dockworker",
                "cd /var/chef/cache/cookbooks/dockworker",
                "/opt/chef/embedded/bin/berks install --path /var/chef/cache/cookbooks"
      ]
    },
    {
      "type": "chef-solo",
      "cookbook_paths": ["cookbooks"],
      "json": {
        "name": "ubuntu_base",
        "run_list": [
          "recipe[supervisor]",
          "recipe[dockworker::base_image]"
        ]
      }
    }
  ]
}
